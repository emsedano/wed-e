<% provide(:title, "Edit user") %> 
<div class="row">
  <div class="small-5 small-centered columns">
    <h1>Update your profile</h1>

      <%= form_for(@user) do |f| %>

        <%= f.label :name %>
        <%= f.text_field :name %>

        <%= f.label :email %>
        <%= f.text_field :email %>


        <%= f.submit "Save changes", class: "btn btn-large btn-primary" %>
      <% end %>
  </div>
</div>